<Window x:Class="B_Validation_ByDataErrorInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B_Validation_ByDataErrorInfo"
        mc:Ignorable="d"
        Title="Validation By IDataErrorInfo" Height="450" Width="800">
    <Window.DataContext>
        <local:RegistrationVM/>
    </Window.DataContext>
    <Grid Margin="100">
        <StackPanel>
            <Label>Username</Label>
            <TextBox Text="{Binding Username, ValidatesOnDataErrors=True,
                UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="{Binding ErrorCollection[Username]}"/>

            <Button>Submit</Button>
        </StackPanel>
    </Grid>
</Window>
